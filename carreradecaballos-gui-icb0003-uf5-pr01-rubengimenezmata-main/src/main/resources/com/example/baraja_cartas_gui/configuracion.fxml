      alignment="CENTER"
      spacing="15"
      prefWidth="500"
      prefHeight="300"
      fx:controller="com.example.baraja_cartas_gui.ConfiguracionController">
    <children>
        <Label text="ConfiguraciÃ³n de la partida" style="-fx-font-size: 18;" />

        <!-- Campo para nombre del jugador -->
        <HBox alignment="CENTER" spacing="10">
            <Label text="Nombre del Jugador:" />
            <TextField fx:id="nombreJugadorField" promptText="Introduce tu nombre" />
        </HBox>

        <!-- Campo para apuesta -->
        <HBox alignment="CENTER" spacing="10">
            <Label text="Apuesta:" />
            <TextField fx:id="apuestaField" promptText="Introduce tu apuesta" />
        </HBox>

        <!-- Botones -->
        <HBox alignment="CENTER" spacing="20">
            <Button text="Empezar Carrera" onAction="#onStartRace" />
            <Button text="Salir" onAction="#onExitButtonClick" />
        </HBox>
    </children>
</VBox>
